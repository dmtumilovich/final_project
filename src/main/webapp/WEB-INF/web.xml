<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://java.sun.com/xml/ns/javaee"
          xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
          version="2.5">
  
  
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>by.epam.rentacar.controller.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MainPage</servlet-name>
    <jsp-file>/jsp/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainPage</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SigninPage</servlet-name>
    <jsp-file>/jsp/signin.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>SigninPage</servlet-name>
    <url-pattern>/signin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SignupPage</servlet-name>
    <jsp-file>/jsp/signup.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignupPage</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  
    <servlet>
      <servlet-name>ProfilePage</servlet-name>
      <jsp-file>/jsp/user/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
      <servlet-name>ProfilePage</servlet-name>
      <url-pattern>/user/profile</url-pattern>
    </servlet-mapping>

  <servlet>
    <servlet-name>EditProfilePage</servlet-name>
    <jsp-file>/jsp/user/edit_profile.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditProfilePage</servlet-name>
    <url-pattern>/user/edit_profile</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CarsPage</servlet-name>
    <jsp-file>/jsp/cars.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>CarsPage</servlet-name>
    <url-pattern>/cars</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CarPage</servlet-name>
    <jsp-file>/jsp/car.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>CarPage</servlet-name>
    <url-pattern>/car</url-pattern>
  </servlet-mapping>

  <!--Admin-->
  <servlet>
    <servlet-name>AdminPage</servlet-name>
    <jsp-file>/jsp/admin/panel.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminPage</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminStatisticPage</servlet-name>
    <jsp-file>/jsp/admin/panel.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminStatisticPage</servlet-name>
    <url-pattern>/admin/panel</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminCarsPage</servlet-name>
    <jsp-file>/jsp/admin/cars.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminCarsPage</servlet-name>
    <url-pattern>/admin/cars</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminCarPage</servlet-name>
    <jsp-file>/jsp/admin/car.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminCarPage</servlet-name>
    <url-pattern>/admin/car</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ErrorPage</servlet-name>
    <jsp-file>/jsp/error/error.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ErrorPage</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>


  <error-page>
    <error-code>404</error-code>
    <location>/error</location>
  </error-page>

  <listener>
    <listener-class>by.epam.rentacar.controller.ContextListener</listener-class>
  </listener>


</web-app>
